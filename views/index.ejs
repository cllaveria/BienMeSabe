    <!-- Body -->
    <div class="body">
      <!-- Selects -->
      <div class="sel_container">
        <div class="sel_title">
          <h2>BUSCADOR DE RECETAS</h2>
          <img src="/images/lupa.svg" alt="lupa">
        </div>
        <div class="selectores">
          <div class="sel_ingredients">
            <label for="ingredient">¿Qué ingredientes tienes?</label>
            <input list="list_ingredient" name="ingredient" id="inp_ingredient"
              placeholder="Introduce los ingredientes deseados">
            <datalist id="list_ingredient">
              <option value="Espaguetis">
              <option value="Macarrones">
              <option value="Galets">
            </datalist>
            <input type=" text" name="ingredients" id="ingredients">
          </div>
          <div class="sel_valEnergetic">
            <label for="valEner">Valor energético (Kcal)</label>
            <div class="inp_minMax">
              <input list="valEnergetic" name="valueMin" id="valueMin" placeholder="Valor mínimo">
              <input list="valEnergetic" name="valueMax" id="valueMax" placeholder="Valor máximo">
            </div>
          </div>
          <div class="sel_persons">
            <label for="numPer">¿Para cuantas personas?</label>
            <input name="numPer" id="numPer" placeholder="Introduce número de personas">
          </div>
          <div class="sel_typePlate">
            <label for="tPlate">¿Qué tipo de plato buscas?</label>
            <select name="typePlate" id="typePlate">
              <option value="choose">Selecciona una opción</option>
              <option value="starters">Entrante</option>
              <option value="first">Primeros</option>
              <option value="seconds">Segundos</option>
              <option value="desserts">Postres</option>
              <option value="cakeShop">Repostería</option>
            </select>
          </div>
        </div>
        <input class="submit" type="submit" value="BUSCAR">
      </div>

      <!-- Publicidad -->
      <div class="advertisements">
        <div class="advertising">
          <img src="/images/anuncio-droetker.jpg" alt="Publicidad" style="width:100%; height:100%;">
        </div>
        <div class="advertising">
          <img src="/images/anuncio-knorr.jpg" alt="Publicidad" style="width:100%; height:100%;">
        </div>
        <div class="advertising">
          <img src="/images/anuncio-solis.jpg" alt="Publicidad" style="width:100%; height:100%;">
        </div>
      </div>

      <!-- Recetas muestra -->
      <div class="rec_container">
        <div class="recipe" onclick="location.href='/recetas/entrantes';">
          <img src="/images/entrantes.jpg" alt="Entrantes">
          <h1 class="title_recipe">Entrantes</h1>
        </div>
        <div class="recipe" onclick="location.href='/recetas/primeros';">
          <img src="/images/primeros.jpg" alt="Primeros">
          <h1 class="title_recipe">Primeros</h1>
        </div>
        <div class="recipe" onclick="location.href='/recetas/segundos';">
          <img src="/images/segundos.jpg" alt="Segundos">
          <h1 class="title_recipe">Segundos</h1>
        </div>
        <div class="recipe" onclick="location.href='/recetas/postres';">
          <img src="/images/postres.jpg" alt="Postres">
          <h1 class="title_recipe">Postres</h1>
        </div>
        <div class="recipe repos" onclick="location.href='/recetas/postres';">
          <img src="/images/reposteria.jpg" alt="Postres">
          <h1 class="title_recipe">Repostería</h1>
        </div>
      </div>

      <!-- Checkin -->
      <div class="checkIn">
        <img src="/images/CTA-subir-receta.jpg" alt="subir-receta" style="width:100%; height:100%;">
        <div class="desc">
          <h2>¿Quieres subir tus propias recetas?</h2>
          <p>Regístrate y podrás subir todas las recetas que quieras y votar por las de otros usuarios.</p>
          <button class="btn_checkIn" type="button" onclick="location.href='/registro';">REGÍSTRATE</button>
        </div>
      </div>

      <!-- Latest recipes -->

      <div class="lastRec_container">
        <h2>ÚLTIMAS RECETAS</h2>
        <div class="latest_rec">
          <div class="last_rec">
